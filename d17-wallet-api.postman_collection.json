{
	"info": {
		"_postman_id": "d17-wallet-api",
		"name": "d17 Wallet API",
		"description": "Collection complète pour tester l'API d17 Wallet",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Auth",
			"item": [
				{
					"name": "Register",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"userId\", jsonData.user.id);",
									"    console.log(\"Utilisateur créé :\", jsonData.user.email);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"description": "Créer un nouvel utilisateur avec un wallet. Note: Le champ 'fullName' peut aussi être écrit 'fullname' (les deux formats sont acceptés).",
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"currency\": \"XOF\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/register",
							"host": ["{{base_url}}"],
							"path": ["auth", "register"]
						}
					}
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"token\", jsonData.token);",
									"    pm.environment.set(\"userId\", jsonData.user.id);",
									"    pm.environment.set(\"userEmail\", jsonData.user.email);",
									"    console.log(\"Token sauvegardé :\", jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/auth/login",
							"host": ["{{base_url}}"],
							"path": ["auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Wallet",
			"item": [
				{
					"name": "Get Wallet",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/wallet",
							"host": ["{{base_url}}"],
							"path": ["wallet"]
						}
					}
				},
				{
					"name": "Add Money",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"amount\": 1000\n}"
						},
						"url": {
							"raw": "{{base_url}}/wallet/add",
							"host": ["{{base_url}}"],
							"path": ["wallet", "add"]
						}
					}
				},
				{
					"name": "Remove Money",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"amount\": 500\n}"
						},
						"url": {
							"raw": "{{base_url}}/wallet/remove",
							"host": ["{{base_url}}"],
							"path": ["wallet", "remove"]
						}
					}
				},
				{
					"name": "Transfer Money",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"receiverEmail\": \"jane@example.com\",\n  \"amount\": 200\n}"
						},
						"url": {
							"raw": "{{base_url}}/wallet/transfer",
							"host": ["{{base_url}}"],
							"path": ["wallet", "transfer"]
						}
					}
				}
			]
		},
		{
			"name": "Transactions",
			"item": [
				{
					"name": "Get Transactions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/transactions",
							"host": ["{{base_url}}"],
							"path": ["transactions"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000"
		},
		{
			"key": "token",
			"value": ""
		},
		{
			"key": "userId",
			"value": ""
		},
		{
			"key": "userEmail",
			"value": ""
		}
	]
}

